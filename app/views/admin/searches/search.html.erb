<h1>検索結果</h1>

<table>
  <tr>
    <th>ID</th>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>会員ステータス</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td>
        <% if user.is_deleted? %>
          退会
        <% else %>
          有効
        <% end %>
      </td>
      <td><%= link_to "詳細", admin_user_path(user.id) %></td>
    </tr>
  <% end %>
</table>
