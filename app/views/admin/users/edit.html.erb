<div class="container">


  <div class="row mt-4">
    <div class="col-lg-2"></div>
    <div class="col-lg-7">
    <div id="title" class="text-center mb-3">User edit</span></div>
    
    <%= form_with model: [:admin, @user], local: true do |f|%>
      <table class="info-edit-table">
        <tr>
          <th class="label">Profil image</th>
          <td><%= f.attachment_field :image%></td>
        </tr>
        <tr>
          <th class="label">Name</th>
          <td><%= f.text_field :name, class: 'form-control', autofocus: true %></td>
        </tr>
        <tr>
          <th class="label">User name</th>
          <td><%= f.text_field :user_name, class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="label">Mail</th>
          <td><%= f.text_field :email, class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="label">Phone number</th>
          <td><%= f.text_field :telephone_number, class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="label">User status</th>
          <td style="text-align: center;">
            <%= f.radio_button :is_deleted, "false" %>
            <%= f.label :is_deleted, "有効", value: false, class: "mr-5 pr-5" %>
            <%= f.radio_button :is_deleted, "true" %>
            <%= f.label :is_deleted, "退会", value: true %>
          </td>
        </tr>
      </table>
      <div class="mt-5 text-center">
        <%= f.submit "UPDATE", class: "edit-btn button" %>
      </div>
    <% end %>
    
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>
