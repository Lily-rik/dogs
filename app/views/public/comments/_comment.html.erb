  <h4 class="label">Comments(<%= post.comments.count%>)</h4>
  <table class="table comment-table">
  <% post.comments.each do |comment| %>
    <tr>
      <td>
        <%= attachment_image_tag comment.user, :image, :fill, 40, 40, fallback: "no_image.jpg", class: "user-image" %>
      </td>
      <td>
        <%= link_to user_path(comment.user.id) do %>
          <%= comment.user.user_name %>
        <% end %>
      </td>
      <td>
        <%= comment.comment %>
      </td>
      <td>
        <div class="mt-1">
        <% if comment.user == current_user %>
          <%= link_to 'DESTROY', post_comment_path(comment.post.id, comment.id), method: :delete, remote: true, id: "destroy-button", class: "button" %>
        <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </table>
