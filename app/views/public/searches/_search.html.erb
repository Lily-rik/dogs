<%= form_with url: search_path, method: :get, class: "search-form", local: :true do |f| %>
  <div class="search-option">
  <%= f.text_field :search, class: "search-input", placeholder: "Search" %>
  <%= f.button :type => "submit", :class => "search-button" do %>
    <i class="fas fa-search" style="color: #2a4073;"></i>
  <% end %>
<% end %>

