<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <div id="title">Post edit</span></div>
    </div>
    <div class="col-lg-6"></div>
  </div>

  <div class="row mt-4">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">

    <%= form_with model: @post, local: true do |f| %>
      <h4 class="label">Post image</h4>
      <%= f.attachment_field :image %>
      <h4 class="label">Post text</h4></h4>
      <%= f.text_area :caption, class: 'form-control' %>

      <div class="row mt-5">
        <div class="col-lg-2"></div>
        <div class="col-lg-3">
      <%= f.submit 'UPDATE', class: "edit-btn button" %>
        </div>
        <div class="col-lg-2"></div>
        <div class="col-lg-3 mt-2">
    <%= link_to 'DESTROY', post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？", id: "post-destroy-btn", class: "button" %>
        </div>
        <div class="col-lg-1"></div>
      </div>
    <% end %>
    </div>
    <div class="col-lg-3"></div>







    </div>
    <div class="col-lg-3"></div>
  </div>
</div>







