<div class="row">
  <div class="col-lg-1"></div>

  <div class="col-lg-11">

    <div class="posts">
      <div class="row">
      <% posts.each do |post|%>
        <div class="col-lg-4">

          <%= attachment_image_tag post.user, :image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50', class: "user-image mr-2"%>

          <%= link_to user_path(post.user.id) do %>
            <%= post.user.user_name %>
          <% end %>

          <div id="favorite_button_<%= post.id %>" class="favorite-icon">
            <%= render 'public/favorites/favorite', post: post %>
          </div>




          <%= link_to post_path(post.id) do %>
            <p class="mt-3"><%= attachment_image_tag post, :image, :fill, 200, 200 %></p>
          <% end %>

          <p class="post-caption mb-5"><%= post.caption %></p>

        </div>
      <% end %>
      <div class="paginate">
        <%= paginate posts %>
      </div>
      </div>
    </div>
  </div>
</div>