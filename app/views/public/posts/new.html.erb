<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <div id="title">New post</span></div>
    </div>
    <div class="col-lg-6"></div>
  </div>

  <div class="row mt-5">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">

    <%= form_with model: @post, local: true do |f| %>
      <h4 class="label">Post image</h4>
      <%= f.attachment_field :image, value: nil %>
      <h4 class="label">Post text</h4>
      <%= f.text_area :caption, class: 'form-control' %>
      <div class="text-right mt-5">
        <%= f.submit 'POST', class: "create-btn button" %>
      </div>
    <% end %>



    </div>
    <div class="col-lg-3"></div>
  </div>




</div>





