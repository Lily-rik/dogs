<div class="container min-vh-100">
  <div id="title" class="text-center">New post</span></div>

  <div class="row mt-4">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">

    <%= form_with model: @post, local: true do |f| %>
      <h4 class="label">Post image<span style="font-size: 16px;"> (５枚まで投稿できます)</span></h4>
      <%= f.attachment_field :post_images_images, multiple: true %>
      <!-- プレビュー用のimgタグ -->
      <div class="mt-4">
        <img id="preview_0" class="preview">
        <img id="preview_1" class="preview">
        <img id="preview_2" class="preview">
        <img id="preview_3" class="preview mt-1">
        <img id="preview_4" class="preview mt-1">
      </div>

      <h4 class="label mt-5">Post text</h4>
      <%= f.text_area :caption, rows:'3', class: 'form-control' %>
      <% if @post.errors.include?(:caption) %>
        <p class="attention"><%= @post.errors.full_messages_for(:caption).first %>
      <% end %>
      <div class="text-center mt-5">
        <%= f.submit 'POST', class: "create-btn button" %>
      </div>
    <% end %>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>
