<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post.id), method: :delete, id: "favorite-button", remote: true do %>
    <i class="fas fa-heart fa-3x" style="color: #d9333f"></i>
    <span><%= post.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post.id), method: :post, id: "favorite-button", remote: true do %>
    <i class="far fa-heart fa-3x" style="color: #2a4073;"></i>
    <span><%= post.favorites.count %></span>
  <% end %>
<% end %>



