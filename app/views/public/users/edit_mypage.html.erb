<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <div id="title">My page edit</span></div>
    </div>
    <div class="col-lg-6"></div>
  </div>

  <div class="row mt-5">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">

      <%= form_with model: @user, url: update_mypage_path(current_user.id), local: true do |f| %>

        <h4 class="label">User image</h4>
        <%= f.attachment_field :image %>
        <h4 class="label">Self introduction</h4>
        <%= f.text_area :self_introduction, class: 'form-control' %>
        <div class="text-right mt-5">
          <%= f.submit 'UPDATE', class: "edit-btn button" %>
        </div>

      <% end %>

    </div>
    <div class="col-lg-3"></div>
  </div>
</div>



