
<div class="search mt-4 mb-5" style="text-align: center;">
  <%= form_with url: search_path, method: :get, local: :true do |f| %>
    <%= f.select :range, options_for_select(["User"])%>
    <%= f.text_field :search %>
    <%= f.submit "検索" %>
  <% end %>
</div>




<table class="table follow-table">
<% users.each do |user| %>
  <tr>
    <td></td>
    <td>
      <%= attachment_image_tag user, :image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50', class: "user-image" %>
    </td>
    <td>
      <%= link_to user_path(user.id) do %>
        <%= user.user_name %>
      <% end %>
    </td>
    <td>
      <div id="follow_button_<%= user.id %>">
        <%= render 'public/relationships/follow_button', user: user %>
      </div>
    </td>
  </tr>
<% end %>
</table>





