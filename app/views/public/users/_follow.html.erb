<%= form_with url: search_path, method: :get, local: :true do |f| %>
  <%= f.label :range, "User"%>
  <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
  <%= f.text_field :word %>
  <%= f.submit "検索" %>
<% end %>

<% users.each do |user| %>
  <%= attachment_image_tag user, :image, :fill, 50, 50, fallback: "no_image.jpg" %>
  <%= user.user_name %>

  <div id="follow_button_<%= user.id %>">

    <%= render 'public/relationships/follow_button', user: user %>


  </div>

<% end %>
