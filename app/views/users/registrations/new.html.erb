<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <div id="title">Sign up</span></div>
    </div>
    <div class="col-lg-6"></div>
  </div>

  <div class="row mt-4">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>  <%= render "users/shared/error_messages", resource: resource %>
      <table class="info-edit-table">
        <tr>
          <th class="label">Name</th>
          <td><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "田中　太郎", class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="label">User name</th>
          <td><%= f.text_field :user_name, autocomplete: "user_name", placeholder: "たろう", class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="label">Email</th>
          <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@gmail.com", class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="label">Passward</th>
          <td>
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, placeholder: "******", class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <th class="label">Passward again</th>
          <td><%= f.password_field :password_confirmation, placeholder: "******", class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="label">Phone number</th>
          <td><%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: "00000000000", class: 'form-control' %></td>
        </tr>
      </table>

      <div class="mt-5 text-center">
        <%= f.submit "SIGN UP", class: "sign-up-btn button " %>
      </div>
      <div class="action-log-in mt-5 pt-3">
        <%= render "users/shared/links" %>
      </div>
    <% end %>

  </div>
</div>