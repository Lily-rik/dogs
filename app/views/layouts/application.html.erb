<!DOCTYPE html>
<html>
  <head>
    <title>Dogs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/792068b81e.js" crossorigin="anonymous"></script>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if admin_signed_in? %>
      <header>
        <div class="header-content">
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to '会員一覧', admin_users_path %></li>
            <li class="nav-item"><%= link_to 'ログアウト', destroy_admin_session_path %></li>
          </ul>
        </div>
      </header>
    <% elsif user_signed_in? %>
      <header>
          <div class="header-content">
            <ul class="flex">
              <li class="nav-item"><%= link_to 'マイページ', "/users/#{current_user.id}" %></li>
              <li class="nav-item"><%= link_to 'みんなの投稿', about_path %></li>
              <li class="nav-item"><%= link_to 'ランキング', ranking_path %></li>
              <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path %></li>
              <li class="nav-item"><%= link_to '会員情報編集', "/users/#{current_user.id}/edit" %></li>
            </ul>
          </div>
      </header>
    <% else %>
      <header>
        <div class="header-content">
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to 'ログアウト', new_user_registration_path %></li>
            <li class="nav-item"><%= link_to 'ログイン', new_user_session_path %></li>
          </ul>
        </div>
      </header>
    <% end %>

    <main>
      <%= yield %>
    </main>

  </body>
</html>
