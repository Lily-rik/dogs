<!DOCTYPE html>
<html>
  <head>
    <title>Dogs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/792068b81e.js" crossorigin="anonymous"></script>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/"><span>DOG'S</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li class="nav-item"><%= link_to '会員一覧', admin_users_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'ログアウト', destroy_admin_session_path, class: 'nav-link' %></li>
            <% elsif user_signed_in? %>
              <li class="nav-item"><%= link_to 'マイページ', "/users/#{current_user.id}", class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'みんなの投稿', about_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'ランキング', ranking_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to '会員情報編集', "/users/#{current_user.id}/edit", class: 'nav-link' %></li>
            <% else %>
              <li class="nav-item"><%= link_to '新規登録', new_user_registration_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <main>
      <%= yield %>
    </main>

  </body>
</html>
